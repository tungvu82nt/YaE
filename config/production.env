# Production Environment Configuration
# YA PEE E-commerce Platform

# Application
NODE_ENV=production
PORT=3001
VITE_API_URL=https://api.yapee.com

# Database
DB_HOST=mysql
DB_PORT=3306
DB_NAME=yapee_db
DB_USER=yapee_user
DB_PASSWORD=${DB_PASSWORD}

# Redis Cache
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}

# JWT Authentication
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration
EMAIL_HOST=${EMAIL_HOST}
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=${EMAIL_USER}
EMAIL_PASS=${EMAIL_PASS}
EMAIL_FROM=noreply@yapee.com

# File Upload
UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp

# Payment Gateway (Future integration)
PAYMENT_GATEWAY_URL=${PAYMENT_GATEWAY_URL}
PAYMENT_GATEWAY_KEY=${PAYMENT_GATEWAY_KEY}

# Shipping Integration
GHN_API_KEY=${GHN_API_KEY}
GHTK_API_KEY=${GHTK_API_KEY}
VNPOST_API_KEY=${VNPOST_API_KEY}

# Monitoring & Analytics
GOOGLE_ANALYTICS_ID=${GOOGLE_ANALYTICS_ID}
SENTRY_DSN=${SENTRY_DSN}
LOG_LEVEL=info

# Security
CORS_ORIGIN=https://yapee.com,https://www.yapee.com
SESSION_SECRET=${SESSION_SECRET}
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_ITEMS=1000

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/yapee.crt
SSL_KEY_PATH=/etc/ssl/certs/yapee.key

# CDN Configuration
CDN_URL=https://cdn.yapee.com
CDN_ACCESS_KEY=${CDN_ACCESS_KEY}
CDN_SECRET_KEY=${CDN_SECRET_KEY}

# Social Media Integration
FACEBOOK_APP_ID=${FACEBOOK_APP_ID}
GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID}

# Admin Configuration
ADMIN_EMAIL=${ADMIN_EMAIL}
ADMIN_NOTIFICATION_EMAIL=${ADMIN_NOTIFICATION_EMAIL}

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=0.1

# Error Reporting
ENABLE_ERROR_REPORTING=true
ERROR_REPORTING_LEVEL=error
